<h1>Home</h1>
<p><%= homeContent %></p>
<% postList.forEach(function(item){ %>
    <% var length = 60; %>
    <% var myString = item.text; %>
    <% var myTruncatedString = myString.substring(0,length); %>
    <h2><%= item.title %></h2>
    <p><%= myTruncatedString %>... <a href="/post/<%= item.title %>" >read more</a></p>
<% }) %>

